<div id="account-management">
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>
  <%- messages() %>
  <% if (errors?.array().filter(error => error.msg !== 'Invalid value').length > 0) { %>
    <ul class="notice">
      <% errors.array().filter(error => error.msg !== 'Invalid value').forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } else { %>
    <h2>Welcome, <%= locals.accountData?.account_firstname %></h2>
    <% if (["employee", "admin"].includes(locals.accountData?.account_type.toLowerCase())) { %>
      <h3>Inventory Management</h3>
      <a href="/inv/" title="Go to the inventory management">Go to the inventory management</a>
    <% } %>
  <% } %>
</div>